{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Slop Daily Post Frontmatter",
  "type": "object",
  "required": ["title", "date", "tags", "author", "excerpt", "tool"],
  "additionalProperties": true,
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Post title in Title Case"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Publication date in YYYY-MM-DD format"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "List of tags, at least one required"
    },
    "author": {
      "type": "string",
      "minLength": 1,
      "description": "Author handle or name"
    },
    "excerpt": {
      "type": "string",
      "minLength": 1,
      "maxLength": 300,
      "description": "Short summary, max 300 characters"
    },
    "tool": {
      "type": "string",
      "minLength": 1,
      "description": "Tool name (e.g., Cursor, Copilot, Claude)"
    },
    "featured": {
      "type": "boolean",
      "description": "Whether post is featured"
    },
    "codeLanguage": {
      "type": "string",
      "description": "Primary code language for syntax highlighting"
    },
    "canonical": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL if cross-posted"
    },
    "originalSource": {
      "type": "string",
      "description": "Original source reference"
    }
  }
}
